@{
    Layout = null;
}

@model Project.Website.Components.ContactDetails.ContactDetailsModel

<!-- Contact Details with Map -->
<div class="row">
    <!-- Map Column -->
    <div class="col-lg-8 mb-4">
        <!-- Embedded Google Map -->
        <iframe width="100%" height="400px" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="http://maps.google.com/maps?hl=en&amp;ie=UTF8&amp;ll=@Model.Latitude,@Model.Longitude&amp;spn=@Model.Span&amp;t=m&amp;z=4&amp;output=embed"></iframe>
    </div>
    <!-- Contact Details Column -->
    <div class="col-lg-4 mb-4">
        @Model.Text
    </div>
</div>
<!-- /.row -->
