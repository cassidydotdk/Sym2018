@{
    Layout = null;
}

@model Project.Website.Components.Portfolio.PortfolioListingModel

<!-- Full Width Portfolio Listing -->
<!-- Project One -->
@foreach (var portfolioListingItem in Model.PortfolioListingItemModels)
{
    <div class="row">
        <div class="col-md-7">
            <a href="@portfolioListingItem.PortfolioItemUrl">
                <img class="img-fluid rounded mb-3 mb-md-0" src="@portfolioListingItem.ImageUrl" alt="@portfolioListingItem.ImageAlt">
            </a>
        </div>
        <div class="col-md-5">
            <h3>@portfolioListingItem.Title</h3>
            @portfolioListingItem.ShortDescription
            <a class="btn btn-primary" href="@portfolioListingItem.PortfolioItemUrl">
                @Model.ViewProjectText
                <span class="glyphicon glyphicon-chevron-right"></span>
            </a>
        </div>
    </div>

    if (!portfolioListingItem.IsLast)
    {
        <hr>
    }
}

<hr />

<!-- Pagination -->
<ul class="pagination justify-content-center">
    <li class="page-item">
        <a class="page-link" href="#" aria-label="Previous">
            <span aria-hidden="true">&laquo;</span>
            <span class="sr-only">Previous</span>
        </a>
    </li>
    <li class="page-item">
        <a class="page-link" href="#">1</a>
    </li>
    <li class="page-item">
        <a class="page-link" href="#">2</a>
    </li>
    <li class="page-item">
        <a class="page-link" href="#">3</a>
    </li>
    <li class="page-item">
        <a class="page-link" href="#" aria-label="Next">
            <span aria-hidden="true">&raquo;</span>
            <span class="sr-only">Next</span>
        </a>
    </li>
</ul>
